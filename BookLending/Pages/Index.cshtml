@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row" align="center">
        <h1>Barrowed Books List</h1>
    </div>
    <div class="row">
    <div class="col-1">
    </div>
    <div class="col-10">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
               <td>Name</td>
               <td>LastName</td>
               <td>Age</td>
               <td>BookName</td>
               <td>BookAuthor</td>
               <td>PageNumbers</td>
               <td>BarrowingDate</td>
                <td></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
        
        @for(int i = 0; i < Model.Transactions.Count();i++)
        {   
            <tr class="align-items-center mt-2">
             <td >@Model.Persons[i].Name</td>
             <td >@Model.Persons[i].LastName</td>
             <td >@Model.Persons[i].Age</td>
             <td >@Model.Books[i].BookName</td>
             <td >@Model.Books[i].BookAuthor</td>
             <td >@Model.Books[i].PageNumbers</td>
             <td >@Model.Transactions[i].BarrowingDate</td>
             <td width ="5%"><a class="btn btn-success" asp-page="/Transaction/Lend" asp-route-id="@Model.Transactions[i].T_ID"> <i class="bi bi-pencil">Lend</i> </a></td>  
             <td width ="5%"><a class="btn btn-danger" asp-page="/Transaction/Delete" asp-route-id="@Model.Transactions[i].T_ID"> <i class="bi bi-x-octagon">Delete</i> </a></td>
            </tr>
        }
        </tbody>
    </table>
    </div>
    <div class="col-1"></div>
    </div>
</div>

