@page
@model BookLending.Pages.Show.ListAllModel
@{
}
<div class="container">
    <div class="row" align="center">
        <h1>Lended Books List</h1>
    </div>
    <div class="row">
    <div class="col-1">
    </div>
    <div class="col-10">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
               <td>Name</td>
               <td>LastName</td>
               <td>Age</td>
               <td>BookName</td>
               <td>BookAuthor</td>
               <td>PageNumbers</td>
               <td>BarrowingDate</td>
               <td>LendingDate</td>
               <td></td>
            </tr>
        </thead>
        <tbody>
        
        @foreach(var trns in Model.Transactions)
        {   
            <tr class="align-items-center mt-2">
             <td >@trns.Person.Name</td>
             <td >@trns.Person.LastName</td>
             <td >@trns.Person.Age</td>
             <td >@trns.Book.BookName</td>
             <td >@trns.Book.BookAuthor</td>
             <td >@trns.Book.PageNumbers</td> 
             <td >@trns.BarrowingDate</td> 
             <td >@trns.LendingDate</td> 
             <td ><a class="btn btn-danger h-25" asp-page="/Transaction/Delete" asp-route-Tid="@trns.T_ID"> <i class="bi bi-x-octagon">Delete</i> </a></td>
            </tr>
        }
        </tbody>
    </table>
    </div>
    <div class="col-1"></div>
    </div>
</div>